<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/titletop_upload"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="PhotoMeta"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout_upload"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/back_img"
            android:text="Log Out"
            android:textSize="17dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.Please upload a photo of something you do in your daily life"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/titletop_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/adbove1_txt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adbove1_txt"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:text="This does not have to be something you do every day, just something you do fairly regularly."
        android:textSize="17dp"
        android:id="@+id/desc1_txt"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="260dp"
        android:id="@+id/img_photo"
        android:layout_below="@+id/desc1_txt"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Remove"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        android:id="@+id/remove_btn"
        android:background="@drawable/rounded_corner_remove"
        android:layout_below="@+id/img_photo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/gallery_btn"
            android:text="Gallery"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/takePhoto_btn"
            android:text="Take a photo"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_below="@+id/gallery_btn"
            android:layout_marginTop="35dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:id="@+id/progress_upload"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/progress"
            android:layout_alignTop="@+id/next_upload" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:id="@+id/next_upload"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/next"
            android:layout_toRightOf="@+id/progress_upload"/>
    </RelativeLayout>

</RelativeLayout>
